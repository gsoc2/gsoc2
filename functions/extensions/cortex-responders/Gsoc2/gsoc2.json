{
  "name": "Gsoc2",
  "version": "1.0",
  "author": "@gsoc2likeme",
  "url": "https://github.com/gsoc2/gsoc2",
  "license": "AGPL-V3",
  "description": "Execute a workflow in Gsoc2",
  "dataTypeList": ["thehive:case", "thehive:alert", "thehive:case_artifact"],
  "command": "Gsoc2/gsoc2.py",
  "baseConfig": "Gsoc2",
  "configurationItems": [
    {
      "name": "url",
      "description": "The URL to your gsoc2 instance",
      "type": "string",
      "multi": false,
      "required": true,
      "defaultValue": "https://gsoc2r.io"
    },
		{
      "name": "api_key",
      "description": "The API key to your Gsoc2 user",
      "type": "string",
      "multi": false,
      "required": true
    },
    {
      "name": "verifyssl",
      "description": "Verify SSL certificate",
      "type": "boolean",
      "multi": false,
      "required": true,
      "defaultValue": true
    },
    {
      "name": "workflow_id",
      "description": "The ID of the workflow to execute",
      "type": "string",
      "multi": false,
      "required": true
    }
  ]
}
